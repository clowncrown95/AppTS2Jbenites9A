<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTS2Jbenites9A.Login">
    <ContentPage.Content>
        <StackLayout>
          <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Tarea Semana 3 " HorizontalTextAlignment="Center" TextColor="White" FontSize="30"/>
          </Frame>
        
            <Label Text="Bienvenidos Login" FontSize="Subtitle" HorizontalOptions="Center"/>
           
            <Label Text="Usuario" HorizontalTextAlignment="Center"/>
            <Entry x:Name="txtUser" Keyboard="Email"/>

            <Label Text="Contraseña" HorizontalTextAlignment="Center"/>
            <Entry x:Name="txtPass" Keyboard="Text" IsPassword="True"/>

            <Button x:Name="btnLogin" Text="Login" Clicked="btnLogin_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>